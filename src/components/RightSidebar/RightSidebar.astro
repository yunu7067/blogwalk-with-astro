---
import TableOfContents from "@coms/RightSidebar/TableOfContents";
import { MarkdownHeading } from "astro";

export interface Props {
	headings: MarkdownHeading[]
}

const { headings } = Astro.props as Props;

---

<aside class="h-100">
	<div class="mx-8 sticky top-4 bg-white">

		{headings &&
		<TableOfContents headings={headings} client:load />}

	</div>
</aside>