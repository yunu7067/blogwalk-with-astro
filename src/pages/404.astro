---
import AstroSeo, {AstroSeoProps} from '$coms/AstroSeo';

const canonicalURL = Astro.url.toString();
const props: {seo: AstroSeoProps} = {
  seo: {
    title: 'Page not found.',
    description: 'Page not found.',
    canonical: canonicalURL,
    noindex: true,
    nofollow: true,
  },
};
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <AstroSeo {...props.seo} />

    <style>
      html,
      body {
        padding: 0;
        margin: 0;
        width: 100%;
        height: 100%;
        font-size: 16px;
      }
    </style>
  </head>
  <body class='bg-gray-50'>
    <div class='w-full h-full flex items-center justify-center'>
      <div class='max-w-3xl w-full p-8 inline-flex flex-col'>
        <h1 class='font-thin lg:text-7xl text-6xl drop-shadow-xl leading-none'>404</h1>
        <div class='font-medium lg:text-8xl text-7xl mb-4 drop-shadow-xl leading-none'>
          Lost in space.
        </div>
        <div class='lg:w-32 w-24 bg-black h-2 mb-4'></div>
        <div class='mb-12 text-gray-700'>The requested URL was not found on this server.</div>
        <div>
          <a
            href='/'
            class='bg-black text-white px-8 sm:py-3 py-4 rounded-lg font-light text-lg shadow transition-shadow hover:shadow-lg hover:shadow-violet-300'
            >Go Home</a
          >
        </div>
      </div>
    </div>
  </body>
</html>
