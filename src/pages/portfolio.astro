---
import MainLayout from '$lays/MainLayout.astro';
import config from '$config';

const {title, description, avatar, social} = config;
const canonicalURL = Astro.url.toString();
const props = {
  wide: true,
  seo: {
    title: title,
    description: description,
    canonical: canonicalURL,
  },
  NavigationItems: {
    blog: {enabled: true, expanded: true},
    home: {enabled: true, expanded: false},
    portfolio: {enabled: true, expanded: true},
    rss: {enabled: true, expanded: false},
    search: {enabled: false, expanded: true},
    series: {enabled: false, expanded: true},
    theme: {enabled: false, expanded: true},
  },
};
---

<MainLayout
  config={config}
  seo={props.seo}
  NavigationItems={props.NavigationItems}
  wide={props.wide}
>
  <main class='w-full'>
    {/* Hero */}
    <div class='pt-[88px] flex flex-col'>
      <div class={`${props.wide ? 'max-w-4xl' : 'max-w-3xl'} w-full mx-auto px-5 pt-8 pb-24`}>
        <span class='text-lg text-gray-600'>Section</span>
        <h1 class='text-6xl font-bold leading-relaxed'>Portfolio</h1>
        <h2 class='text-2xl leading-normal text-gray-600'></h2>
      </div>
    </div>
    <div class='flex flex-col'>
      <article class='max-w-3xl w-full mx-auto px-5 pt-8 pb-32'>portfolio list...</article>
    </div>
  </main>
</MainLayout>
